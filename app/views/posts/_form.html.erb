<%= form_for @post, html: {multipart: true} do |f| %>

<%= f.label :title, 'Title:' %>
<%= f.text_field :title, required: true %>
<br>

<%= f.label :description, 'Description:' %>
<%= f.text_field :description, required: true %>
<br>

<%= f.label :image, 'Image:' %>
<%= f.text_field :image, required: true %>
<br>

<%= f.label :latitude, 'Latitude:' %>
<%= f.text_field :latitude, required: true %>
<br>

<%= f.label :longitude, 'Longitude:' %>
<%= f.number_field :longitude, required: true %>
<br>

<%= f.label :post_visibility, 'Account Type:' %>
<%= f.text_field :post_visibility, required: true %>
<br>

<%= f.submit 'Submit' %>

<% end %>
